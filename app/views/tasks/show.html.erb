<% provide(:title, current_user.name) %>
<div class="container">
      
  <h1>タスク詳細</h1>
  
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered" id="table-task">
        <tbody>
          <tr>
            <th class="active col-md-2">ID</th>
            <td class="col-md-10"><%= @task.id %></td>
          </tr>
          <tr>
            <th class="active">名称</th>
            <td><%= @task.task_name %></td>
          </tr>
          <tr>
            <th class="active">詳細</th>
            <td><%= @task.content %></td>
          </tr>
          <tr>
            <th class="active">作成日</th>
            <td><%= @task.created_at %></td>
          </tr>
          <tr>
            <th class="active">更新日</th>
            <td><%= @task.updated_at %></td>
          </tr>
        </tbody>
      </table>
      
      <div>
        <%= link_to "編集", user_edit_task_path, class: "btn btn-lg btn-success" %>
        <%= link_to "削除", user_destroy_task_path, method: :post,
                data: { confirm: "#{@task.task_name}を削除します。よろしいですか？"},
                class: "btn btn-lg btn-danger" %>
      </div>
    </div>    
  </div>
</div>
