<% provide(:title, current_user.name) %>
<div class="container">
      
  <h1>タスク詳細</h1>
  
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered" id="table-task">
        <tbody>
          <tr>
            <th class="active col-md-2">ID</th>
            <td class="col-md-10"><%= @task.id %></td>
          </tr>
          <tr>
            <th class="active">名称</th>
            <td><%= @task.task_name %></td>
          </tr>
          <tr>
            <th class="active">詳細</th>
            <td><%= @task.content %></td>
          </tr>
          <tr>
            <th class="active">作成日</th>
            <td>2019/10/21 23:46</td>
          </tr>
          <tr>
            <th class="active">更新日</th>
            <td>2019/10/21 23:46</td>
          </tr>
        </tbody>
      </table>
      
      <div>
        <a class="btn btn-lg btn-success" href="/users/3/tasks/276/edit">編集</a>
        <a data-confirm="「タスクアプリ作成」を削除します。よろしいですか？" class="btn btn-lg btn-danger" rel="nofollow" data-method="delete" href="/users/3/tasks/276">削除</a>
      </div>
    </div>    
  </div>
</div>
